extends layouts/main

block content
    .form-container
        //- enctype는 multer에서 필요한 값. 이미지파일을 url로 변환
        form(action=`${routes.users}${routes.editProfile}`, method="post" enctype="multipart/form-data")
            .fileUpload
                label(for="avatar") Avatar
                input(type="file", id="avatar", name="avatar" accept="image/*")
            input(type="text", placeholder="Name", name="name" required value=loggedUser.name)
            input(type="email", placeholder="Email", name="email" required value=loggedUser.email)
            input(type="submit", value="🔄 Update Profile")